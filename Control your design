  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Outfit', sans-serif; }
    #mobile-menu { transition: opacity 0.3s ease; }

    /* 3D Card Styles */
    .stats-card {
      perspective: 1200px; /* Increased perspective for better 3D depth */
      height: 180px; /* Slightly taller */
      cursor: pointer;
    }
    
    .stats-card-inner {
      position: relative;
      width: 100%;
      height: 100%;
      text-align: center;
      transition: transform 2.2s cubic-bezier(.16, 1, .3, 1); /* Even slower rotation as requested */
      transform-style: preserve-3d;
    }
    
    .stats-card:hover .stats-card-inner {
      transform: rotateY(180deg);
    }
    
    .stats-face {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      -webkit-backface-visibility: hidden;
      backface-visibility: hidden;
      border-radius: 1rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      /* Removed backdrop-filter from parent to prevent 3D flattening */
      background-color: rgba(255, 255, 255, 0.05); 
      border: 1px solid rgba(255, 255, 255, 0.1);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
      transform-style: preserve-3d;
    }

    /* Add blur via pseudo-element to preserve 3D context for children */
    .stats-face::before {
      content: '';
      position: absolute;
      inset: 0;
      border-radius: 1rem;
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
      transform: translateZ(-1px); /* Push it slightly back */
      z-index: -1;
    }
    
    .stats-front {
      /* Front specific styles */
      z-index: 2;
    }
    
    .stats-back {
      transform: rotateY(180deg);
      /* Move gradient to background */
      background: linear-gradient(135deg, rgba(94, 98, 255, 0.2), rgba(153, 102, 255, 0.2));
      border: 1px solid rgba(94, 98, 255, 0.4);
      z-index: 1;
    }
    
    .stats-content {
      width: 100%;
      padding: 1.5rem;
      transform-style: preserve-3d;
      z-index: 10;
      /* Ensure container itself floats slightly off the face */
      transform: translateZ(40px); 
    }
    
    /* Target immediate children for deep 3D float effect */
    .stats-content > * {
      transform: translateZ(0px); /* Relative to stats-content */
      transition: transform 0.6s cubic-bezier(.16, 1, .3, 1);
      text-shadow: 0 5px 15px rgba(0, 0, 0, 0.8);
      will-change: transform;
    }
    
    .stats-card:hover .stats-content > * {
      /* 
         Combined float: 40px (container) + 80px (child) = 120px total float.
         This ensures a massive, visible gap.
      */
      transform: translateZ(80px); 
      text-shadow: 0 20px 40px rgba(0, 0, 0, 1);
    }
  </style>
