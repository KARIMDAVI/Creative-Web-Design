  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // 1. SETUP THREE.JS SCENE
      const scene = new THREE.Scene();
      scene.background = new THREE.Color(0x000000); 

      const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
      camera.position.set(0, 30, 40);
      camera.lookAt(0, 0, 0);

      const renderer = new THREE.WebGLRenderer({ alpha: true, antialias: true });
      renderer.setSize(window.innerWidth, window.innerHeight);
      
      const container = document.getElementById('vanta-bg');
      container.innerHTML = ''; 
      container.appendChild(renderer.domElement);

      // 3. CREATE THE OUTER GLOBE (Wireframe Sphere)
      const textureLoader = new THREE.TextureLoader();
      const earthMap = textureLoader.load('https://raw.githubusercontent.com/mrdoob/three.js/master/examples/textures/planets/earth_specular_2048.jpg');
      
      const geometryOuter = new THREE.SphereGeometry(20, 64, 64);
      
      // 3a. WIREFRAME MATERIAL (Original)
      const materialWireframe = new THREE.MeshBasicMaterial({ 
        color: 0x5E62FF,
        wireframe: true,
        transparent: true,
        opacity: 0.3
      });

      // 3b. DIGITAL LINES MATERIAL (Shader with wireframe)
      const materialGlobe = new THREE.ShaderMaterial({
        uniforms: {
          map: { value: earthMap },
          color: { value: new THREE.Color(0x5E62FF) },
          opacity: { value: 0.8 }
        },
        vertexShader: `
          varying vec2 vUv;
          void main() {
            vUv = uv;
            gl_Position = projectionMatrix * modelViewMatrix * vec4(position, 1.0);
          }
        `,
        fragmentShader: `
          uniform sampler2D map;
          uniform vec3 color;
          uniform float opacity;
          varying vec2 vUv;
          void main() {
            vec4 texColor = texture2D(map, vUv);
            // If ocean (bright/specular), make transparent (discard) to show only land
            if (texColor.r > 0.5) discard;
            gl_FragColor = vec4(color, opacity);
          }
        `,
        wireframe: true,
        transparent: true,
        side: THREE.DoubleSide
      });

      const globeMapMesh = new THREE.Mesh(geometryOuter, materialGlobe);
      globeMapMesh.visible = false;
      scene.add(globeMapMesh);

      const outerGlobe = new THREE.Mesh(geometryOuter, materialWireframe);
      scene.add(outerGlobe);

      // 4. CREATE THE INNER OBJECT (The "Specific Shape")
      const geometryInner = new THREE.IcosahedronGeometry(6, 0);
      const materialInner = new THREE.MeshBasicMaterial({ 
        color: 0x9966FF, // Brighter Purple
        wireframe: true 
      });
      const innerObject = new THREE.Mesh(geometryInner, materialInner);
      scene.add(innerObject);

      // Configuration Object
      const params = {
        waveSpeed: 1.0,
        waveHeight: 3.0,
        waveFrequency: 0.1,
        gridSize: 2.0, 
        dotColor: 0x9966FF,
        lineColor: 0x5E62FF,
        backgroundColor: 0x000000,
        showDots: true,
        showLines: true,
        showSphere: true,
        showGlobeMap: false,
        showInner: true,
        sphereRadius: 20,
        sphereColor: 0x5E62FF,
        innerSize: 6,
        innerColor: 0x9966FF,
        // Text Styles
        brandColor: 0xffffff,
        headlineSize: 72, // px
        headlineColor: 0xffffff,
        headlineSpacing: 0, // px
        gradientStart: 0x5E62FF,
        gradientEnd: 0x9966FF,
        subHeadSize: 18, // px
        subHeadColor: 0x9ca3af, // gray-400
        subHeadSpacing: 0 // px
      };

      // GUI Setup
      const gui = new lil.GUI({ title: 'Design Control' });
      
      const folderText = gui.addFolder('Text Styles');
      
      // Brand
      folderText.addColor(params, 'brandColor').name('Brand Color').onChange(v => {
        const el = document.querySelector('.text-2xl.font-bold');
        if(el) el.style.color = new THREE.Color(v).getStyle();
      });

      // Headline
      folderText.add(params, 'headlineSize', 24, 120).name('Headline Size').onChange(v => {
        const el = document.querySelector('h1');
        if(el) el.style.fontSize = `${v}px`;
      });
      folderText.addColor(params, 'headlineColor').name('Headline Color').onChange(v => {
        const el = document.querySelector('h1');
        if(el) el.style.color = new THREE.Color(v).getStyle();
      });
      folderText.add(params, 'headlineSpacing', -2, 10).name('Headline Spacing').onChange(v => {
        const el = document.querySelector('h1');
        if(el) el.style.letterSpacing = `${v}px`;
      });
      
      // Gradient Text
      const updateGradient = () => {
        const c1 = new THREE.Color(params.gradientStart).getStyle();
        const c2 = new THREE.Color(params.gradientEnd).getStyle();
        const el = document.querySelector('.bg-clip-text');
        if(el) el.style.backgroundImage = `linear-gradient(to right, ${c1}, ${c2})`;
      };
      folderText.addColor(params, 'gradientStart').name('Gradient Start').onChange(updateGradient);
      folderText.addColor(params, 'gradientEnd').name('Gradient End').onChange(updateGradient);

      // Sub-Headline
      folderText.add(params, 'subHeadSize', 12, 36).name('Subhead Size').onChange(v => {
        const el = document.querySelector('p.text-lg');
        if(el) el.style.fontSize = `${v}px`;
      });
      folderText.addColor(params, 'subHeadColor').name('Subhead Color').onChange(v => {
        const el = document.querySelector('p.text-lg');
        if(el) el.style.color = new THREE.Color(v).getStyle();
      });
      folderText.add(params, 'subHeadSpacing', -1, 5).name('Subhead Spacing').onChange(v => {
        const el = document.querySelector('p.text-lg');
        if(el) el.style.letterSpacing = `${v}px`;
      });

      const folderWave = gui.addFolder('Wave Sheet');
      folderWave.add(params, 'waveSpeed', 0, 5).name('Wave Speed');
      folderWave.add(params, 'waveHeight', 0, 10).name('Wave Height');
      folderWave.add(params, 'waveFrequency', 0.01, 0.5).name('Wave Frequency');
      folderWave.add(params, 'gridSize', 0.5, 5).name('Grid Size').onFinishChange(createGrid);
      
      folderWave.addColor(params, 'dotColor').name('Dot Color').onChange(v => {
        if(dotsMaterial) dotsMaterial.color.set(v);
      });
      folderWave.addColor(params, 'lineColor').name('Line Color').onChange(v => {
        if(linesMaterial) linesMaterial.color.set(v);
      });
      folderWave.add(params, 'showDots').name('Show Dots').onChange(v => {
        if(dotsMesh) dotsMesh.visible = v;
      });
      folderWave.add(params, 'showLines').name('Show Lines').onChange(v => {
        if(linesMesh) linesMesh.visible = v;
      });

      const folderSphere = gui.addFolder('Sphere & Core');
      
      folderSphere.add(params, 'showSphere').name('Show Sphere').onChange(v => {
        if (!v) {
           outerGlobe.visible = false;
           globeMapMesh.visible = false;
        } else {
           outerGlobe.visible = !params.showGlobeMap;
           globeMapMesh.visible = params.showGlobeMap;
        }
      });
      
      folderSphere.add(params, 'showGlobeMap').name('Show Globe Map').onChange(v => {
        if (params.showSphere) {
          outerGlobe.visible = !v;
          globeMapMesh.visible = v;
        }
      });

      folderSphere.addColor(params, 'sphereColor').name('Sphere Color').onChange(v => {
        materialWireframe.color.set(v);
        materialGlobe.uniforms.color.value.set(v);
      });

      folderSphere.add(params, 'sphereRadius', 10, 40).name('Sphere Radius').onChange(v => {
        const scale = v / 20;
        outerGlobe.scale.setScalar(scale);
        globeMapMesh.scale.setScalar(scale);
      });

      folderSphere.add(params, 'showInner').name('Show Inner').onChange(v => innerObject.visible = v);
      folderSphere.add(params, 'innerSize', 1, 15).name('Inner Size').onChange(v => {
        innerObject.scale.setScalar(v / 6);
      });
      folderSphere.addColor(params, 'innerColor').name('Inner Color').onChange(v => materialInner.color.set(v));

      gui.addColor(params, 'backgroundColor').name('Background').onChange(v => scene.background.set(v));


      // GRID GENERATION
      let geometry, dotsMesh, linesMesh, dotsMaterial, linesMaterial;

      function createGrid() {
        if (dotsMesh) {
            scene.remove(dotsMesh);
            geometry.dispose();
        }
        if (linesMesh) {
            scene.remove(linesMesh);
        }

        const radius = params.gridSize;
        const width = 200; 
        const height = 200;
        
        const vertices = [];
        const indices = [];
        const map = new Map(); // "x,y" -> index
        const edges = new Set(); // "min-max" -> exists

        const hexW = Math.sqrt(3) * radius;
        const hexH = 2 * radius;
        const distX = hexW;
        const distY = 1.5 * radius;

        const cols = Math.ceil(width / distX) + 4;
        const rows = Math.ceil(height / distY) + 4;
        
        const offsetX = -width / 2;
        const offsetY = -height / 2;

        const addVertex = (x, y) => {
            // Rounding to ensure shared vertices match up
            const key = `${Math.round(x*100)},${Math.round(y*100)}`;
            if (map.has(key)) return map.get(key);
            
            // X, Y, Z (Y is up)
            vertices.push(x, 0, y); 
            const index = (vertices.length / 3) - 1;
            map.set(key, index);
            return index;
        };

        for (let r = 0; r < rows; r++) {
            for (let c = 0; c < cols; c++) {
                let cx = c * distX + offsetX;
                let cz = r * distY + offsetY;
                
                if (r % 2 !== 0) {
                    cx += distX / 2;
                }

                const currentHexIndices = [];
                // 6 corners of hexagon
                for (let i = 0; i < 6; i++) {
                    const angle = (Math.PI / 3) * i + (Math.PI / 6); 
                    const vx = cx + radius * Math.cos(angle);
                    const vz = cz + radius * Math.sin(angle);
                    currentHexIndices.push(addVertex(vx, vz));
                }

                // Connect edges
                for (let i = 0; i < 6; i++) {
                    const idx1 = currentHexIndices[i];
                    const idx2 = currentHexIndices[(i + 1) % 6];
                    const key = idx1 < idx2 ? `${idx1}-${idx2}` : `${idx2}-${idx1}`;
                    
                    if (!edges.has(key)) {
                        edges.add(key);
                        indices.push(idx1, idx2);
                    }
                }
            }
        }

        geometry = new THREE.BufferGeometry();
        geometry.setAttribute('position', new THREE.Float32BufferAttribute(vertices, 3));
        geometry.setIndex(indices);

        dotsMaterial = new THREE.PointsMaterial({ color: params.dotColor, size: 0.3 });
        dotsMesh = new THREE.Points(geometry, dotsMaterial);
        dotsMesh.visible = params.showDots;
        
        linesMaterial = new THREE.LineBasicMaterial({ color: params.lineColor, transparent: true, opacity: 0.5 });
        linesMesh = new THREE.LineSegments(geometry, linesMaterial);
        linesMesh.visible = params.showLines;

        scene.add(dotsMesh);
        scene.add(linesMesh);
      }

      createGrid();

      const clock = new THREE.Clock();

      function animate() {
        requestAnimationFrame(animate);
        
        const time = clock.getElapsedTime() * params.waveSpeed;
        const positions = geometry.attributes.position.array;
        
        for (let i = 0; i < positions.length; i += 3) {
            const x = positions[i];
            const z = positions[i+2];
            
            // 3D Wave Function: Combine sine waves for organic "sheet" look
            const y = (Math.sin(x * params.waveFrequency + time) + Math.cos(z * params.waveFrequency + time)) * params.waveHeight;
            
            positions[i+1] = y;
        }
        
        geometry.attributes.position.needsUpdate = true;
        
        // Slight rotation for dynamic feel
        scene.rotation.y = Math.sin(time * 0.05) * 0.1;

        // Rotate Outer Globe
        outerGlobe.rotation.y += 0.002;
        outerGlobe.rotation.x += 0.001;
        
        // Sync Globe Map Rotation
        globeMapMesh.rotation.copy(outerGlobe.rotation);

        // Rotate Inner Object (Faster and opposite direction for effect)
        innerObject.rotation.y -= 0.01;
        innerObject.rotation.x -= 0.005;

        renderer.render(scene, camera);
      }
      animate();

      window.addEventListener('resize', () => {
        camera.aspect = window.innerWidth / window.innerHeight;
        camera.updateProjectionMatrix();
        renderer.setSize(window.innerWidth, window.innerHeight);
      });

      // Mobile Menu Logic
      const btn = document.getElementById('menu-btn')
      const menu = document.getElementById('mobile-menu')
      if (btn && menu) btn.addEventListener('click', () => menu.classList.toggle('hidden'))
    })
  </script>
</body>
</html>
